<?xml version="1.0" encoding="utf-8"?>
<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/login"
	> 
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
	    <TableRow> 
			<TextView 
				android:text="商品编号："
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_productNo" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow>

		<TableRow>
			<TextView 
				android:text="商品类别：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<Spinner 
				android:id="@+id/Spinner_productClassObj" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="商品名称：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_productName" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="商品图片：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<ImageView android:id="@+id/iv_productPhoto" 
				android:layout_width="80dp"
				android:layout_height="80dp" 
				android:src="@drawable/noimage" 
			/> 
		</TableRow>
		<TableRow android:gravity="right">
			<Button 
				android:text="拍照"
				android:id="@+id/btn_productPhoto"
				android:layout_width="60dp" 
				android:layout_height="wrap_content"
			/> 
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="商品单价：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText
				android:text=""
				android:id="@+id/ET_productPrice"
				android:inputType="numberDecimal" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="商品库存：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText
				android:text="" 
				android:id="@+id/ET_productCount"
				android:inputType="number" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="是否推荐：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<Spinner 
				android:id="@+id/Spinner_recommendFlag" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="人气值：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText
				android:text="" 
				android:id="@+id/ET_hotNum"
				android:inputType="number" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="上架日期：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<DatePicker 
				android:id="@+id/dp_onlineDate"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
			/>



		</TableRow> 
	</TableLayout>
	<LinearLayout 
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="50dp" 
		android:gravity="center">
		   <Button 
				android:text="确定" 
				android:id="@+id/BtnUpdate"
				android:layout_height="wrap_content" 
				android:layout_marginRight="50dp"
				android:layout_width="50dp"/> 
	</LinearLayout> 
  </LinearLayout>
</ScrollView>


